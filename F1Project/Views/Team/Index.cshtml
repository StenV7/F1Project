@model IEnumerable<F1Lib.Models.Team>

@{
    ViewData["Title"] = "Index";
}
<h1 style="color:darkgray">F1 Statistics</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="tableheadermakeup">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wiki)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="tableelementmakeup">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="tableelementmakeup">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="tableelementmakeup">
                @Html.DisplayFor(modelItem => item.Wiki)
            </td>
            <td class="tableelementmakeup">
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
